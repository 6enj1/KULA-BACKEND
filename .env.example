# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/savr?schema=public"

# JWT - CHANGE THESE IN PRODUCTION
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# Server
PORT=3000
NODE_ENV="development"

# Yoco Payment Gateway (South Africa)
YOCO_SECRET_KEY="sk_test_your_yoco_test_key"
YOCO_WEBHOOK_SECRET="whsec_your_webhook_secret"

# App URLs (for payment redirects)
APP_URL="http://localhost:3000"
APP_SCHEME="savr://"

# Apple Sign In
APPLE_BUNDLE_ID="com.savr.app"

# Google Sign In
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Firebase (for push notifications - optional)
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
