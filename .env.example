# ===========================================
# REQUIRED — app will not start without these
# ===========================================

# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/kula"

# JWT signing keys — generate with: openssl rand -base64 48
JWT_SECRET=""
JWT_REFRESH_SECRET=""

# Yoco payment gateway (https://developer.yoco.com)
YOCO_SECRET_KEY=""
YOCO_WEBHOOK_SECRET=""

# ===========================================
# OPTIONAL — have sensible defaults
# ===========================================

# Server
PORT=3000
NODE_ENV="development"

# JWT token lifetimes
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# OAuth — auth will silently fail without these
GOOGLE_CLIENT_ID=""
APPLE_BUNDLE_ID="com.savr.app"

# Payment redirect URLs
APP_URL="http://localhost:3000"
APP_SCHEME="savr://"
